<script>
var p1, p2;
  function zoomToggle(iWideSmall,iHighSmall,whichImage){
    p1=whichImage.style.width;p2=whichImage.style.height;
  if((p1==iWideSmall)||(p2==iHighSmall)){
    p1=iWideSmall;p2=iHighSmall;}else{
    p1=whichImage;p2=whichImage;}
  whichImage.style.width=p1;whichImage.style.height=p2;
}
</script>
<img
  border="0" 
    src="yourimage.gif" 
    width="100"
    height="100"
onclick="zoomToggle('0',this);"
>
